---
import "../styles/global.css";

const name = "Federico D'Ubaldi";
const role = "Builder • Data • Automation • Web";
const tagline =
  "Progetto e sviluppo strumenti digitali in modo pratico e veloce, trasformando idee in demo funzionanti.";

/*
  PLACEHOLDER PROJECTS
  Verranno sostituiti nello Step 4
*/
const featured = [
  {
    title: "Flagship Project (Placeholder)",
    desc: "Il progetto principale: problema chiaro, soluzione concreta, demo e case study completi (in arrivo).",
    tags: ["Product", "Data", "Automation", "Web"],
  },
  {
    title: "Project Placeholder #2",
    desc: "Un progetto operativo: automazione o strumento che riduce lavoro manuale e aumenta controllo.",
    tags: ["Automation", "API", "UX"],
  },
  {
    title: "Project Placeholder #3",
    desc: "Un esperimento più advanced: AI/ML o ricerca tecnica con approccio demo-first.",
    tags: ["AI", "ML", "Experiment"],
  },
];

const now = [
  "Sto costruendo un portfolio di progetti data-driven (demo + case study).",
  "Mi interessa la parte 'product': flusso utente, chiarezza, idiot-proof, iterazione veloce.",
  "Obiettivo: opportunità dove posso crescere facendo e spedendo soluzioni reali.",
];

const toolbox = [
  "Python",
  "FastAPI",
  "Pandas",
  "SQL",
  "React",
  "Astro",
  "Tailwind",
  "Docker",
  "Nginx",
  "Linux",
  "Automation",
  "Analytics",
  "Prompting",
];
---

<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{name} — Portfolio</title>
    <meta
      name="description"
      content="Portfolio personale: progetti, automazioni e strumenti digitali."
    />
  </head>

  <body class="bg-zinc-950 text-zinc-50 selection:bg-violet-400/30 selection:text-zinc-50">
    <!-- Background -->
    <div class="pointer-events-none fixed inset-0 -z-10">
      <div
        class="absolute inset-0 bg-[radial-gradient(1200px_circle_at_15%_10%,rgba(139,92,246,0.20),transparent_55%),radial-gradient(900px_circle_at_85%_20%,rgba(99,102,241,0.18),transparent_55%),radial-gradient(900px_circle_at_50%_90%,rgba(34,197,94,0.10),transparent_60%)]"
      >
      </div>
      <div
        class="absolute inset-0 opacity-[0.10] [background-image:linear-gradient(to_right,rgba(255,255,255,0.08)_1px,transparent_1px),linear-gradient(to_bottom,rgba(255,255,255,0.08)_1px,transparent_1px)] [background-size:56px_56px]"
      >
      </div>
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-zinc-950/20 to-zinc-950"></div>
    </div>

    <!-- Header -->
    <header class="sticky top-0 z-50 border-b border-white/10 bg-zinc-950/60 backdrop-blur">
      <div class="mx-auto flex max-w-5xl items-center justify-between px-4 py-3">
        <a href="#top" class="flex items-center gap-2 font-semibold tracking-tight">
          <span class="inline-flex h-2 w-2 rounded-full bg-violet-400"></span>
          {name}
        </a>

        <nav class="flex items-center gap-4 text-sm text-zinc-300">
          <a class="hover:text-white" href="#projects">Progetti</a>
          <a class="hover:text-white" href="#about">Chi sono</a>
          <a class="hover:text-white" href="#now">Now</a>
          <a class="hover:text-white" href="#toolbox">Toolbox</a>
          <a class="hover:text-white" href="#contact">Contatti</a>
        </nav>
      </div>
    </header>

    <main id="top" class="mx-auto max-w-5xl px-4">
      <!-- HERO (Type 2: micro-signals) -->
      <section class="py-16 md:py-20">
        <div class="relative overflow-hidden rounded-3xl border border-white/10 bg-gradient-to-b from-white/5 to-transparent p-8 md:p-10">
          <!-- Soft glows -->
          <div class="pointer-events-none absolute -top-24 right-[-120px] h-72 w-72 rounded-full bg-violet-500/20 blur-3xl"></div>
          <div class="pointer-events-none absolute -bottom-28 left-[-140px] h-72 w-72 rounded-full bg-indigo-500/20 blur-3xl"></div>

          <div class="relative max-w-3xl">
            <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-300">
              <span class="h-1.5 w-1.5 rounded-full bg-violet-400"></span>
              {role}
            </div>

            <h1 class="mt-5 text-4xl font-semibold tracking-tight text-zinc-50 md:text-6xl">
  Costruisco <span class="text-violet-300">tool</span> e <span class="text-indigo-300">automazioni</span>
  che diventano demo reali.
</h1>

<p class="mt-5 max-w-2xl text-base leading-relaxed text-zinc-300">
  Dal problema alla soluzione: progetti data-driven, automazioni e prototipi web sviluppati in modo pratico e veloce.
</p>


            <div class="mt-7 flex flex-wrap gap-3">
              <a
                href="#projects"
                class="rounded-xl bg-zinc-50 px-4 py-2 text-sm font-semibold text-zinc-950 hover:bg-white"
              >
                Vedi i progetti
              </a>
              <a
                href="#contact"
                class="rounded-xl border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white hover:bg-white/10"
              >
                Contattami
              </a>
            </div>

            <!-- Micro-signals -->
            <div class="mt-10 grid gap-3 md:grid-cols-3">
              <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
                <p class="text-xs text-zinc-400">Status</p>
                <p class="mt-1 text-sm font-semibold text-zinc-100">Building • In progress</p>
              </div>
              <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
                <p class="text-xs text-zinc-400">Focus</p>
                <p class="mt-1 text-sm font-semibold text-zinc-100">Data • Automation • Web</p>
              </div>
              <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
                <p class="text-xs text-zinc-400">Approach</p>
                <p class="mt-1 text-sm font-semibold text-zinc-100">Demo-first • Fast iteration</p>
              </div>
            </div>

            <div class="mt-10 flex flex-wrap gap-2 text-xs text-zinc-300">
              {["Python","FastAPI","React","Nginx","Docker","AI-assisted build"].map((t) => (
                <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1">{t}</span>
              ))}
            </div>
          </div>
        </div>
      </section>

      <!-- PROJECTS (Layout C: 1 hero + 2) -->
      <section id="projects" class="py-12">
        <div class="flex items-end justify-between gap-4">
          <h2 class="text-2xl font-semibold tracking-tight text-zinc-50">Progetti</h2>
          <p class="text-sm text-zinc-400">Placeholder oggi, case study nello Step 4.</p>
        </div>

        <div class="mt-6 grid gap-4 md:grid-cols-3">
          <!-- Hero project (span 2) -->
          <article class="group md:col-span-2 rounded-3xl border border-white/10 bg-gradient-to-b from-white/7 to-white/3 p-6 shadow-sm transition hover:-translate-y-0.5 hover:border-white/20">
            <div class="flex items-start justify-between gap-4">
              <h3 class="text-lg font-semibold text-zinc-50">
                {featured[0]?.title ?? "Project Placeholder"}
              </h3>
              <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-300">
                Flagship
              </span>
            </div>

            <p class="mt-3 max-w-2xl text-sm leading-relaxed text-zinc-300">
              {featured[0]?.desc ?? ""}
            </p>

            <div class="mt-4 flex flex-wrap gap-2">
              {(Array.isArray(featured[0]?.tags) ? featured[0].tags : []).map((t) => (
                <span class="rounded-full bg-white/5 px-3 py-1 text-xs text-zinc-200 ring-1 ring-white/10">
                  {t}
                </span>
              ))}
            </div>

            <div class="mt-6 flex flex-wrap gap-3 text-sm">
              <span class="rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-zinc-300">
                Demo: soon
              </span>
              <span class="rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-zinc-300">
                Case study: soon
              </span>
            </div>

            <div class="mt-6 h-px w-full bg-white/10"></div>

            <p class="mt-4 text-xs text-zinc-400">
              Nota: qui metteremo screenshot/metriche quando il progetto è pronto.
            </p>
          </article>

          <!-- Side projects (2 stacked) -->
          <div class="grid gap-4">
            {[featured[1], featured[2]].map((p) => (
              <article class="group rounded-3xl border border-white/10 bg-white/5 p-6 shadow-sm transition hover:-translate-y-0.5 hover:border-white/20">
                <h3 class="text-base font-semibold text-zinc-50">{p?.title ?? "Project Placeholder"}</h3>
                <p class="mt-2 text-sm leading-relaxed text-zinc-300">{p?.desc ?? ""}</p>

                <div class="mt-4 flex flex-wrap gap-2">
                  {(Array.isArray(p?.tags) ? p.tags : []).map((t) => (
                    <span class="rounded-full bg-white/5 px-3 py-1 text-xs text-zinc-200 ring-1 ring-white/10">
                      {t}
                    </span>
                  ))}
                </div>

                <div class="mt-5 text-xs text-zinc-400 italic">
                  Demo e repository saranno aggiunti più avanti
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>

      <!-- ABOUT -->
      <section id="about" class="py-12">
        <h2 class="text-2xl font-semibold tracking-tight text-zinc-50">Chi sono</h2>
        <div class="mt-4 max-w-3xl space-y-4 text-sm leading-relaxed text-zinc-300">
          <p>
            Mi muovo bene nella progettazione e nello sviluppo pratico di soluzioni digitali.
            Preferisco costruire, testare e iterare piuttosto che fermarmi solo sulla teoria.
          </p>
          <p>
            Utilizzo strumenti di AI come supporto allo sviluppo per accelerare il processo creativo e tecnico,
            mantenendo il controllo sulle scelte progettuali.
          </p>
          <p>
            Questo portfolio è uno spazio in evoluzione: qui raccolgo ciò che costruisco, sperimento e imparo.
          </p>
        </div>
      </section>

      <!-- NOW -->
      <section id="now" class="py-12">
        <h2 class="text-2xl font-semibold tracking-tight text-zinc-50">Now</h2>
        <p class="mt-2 text-sm text-zinc-400">Cosa sto facendo in questo periodo.</p>

        <div class="mt-6 rounded-3xl border border-white/10 bg-white/5 p-6">
          <ul class="space-y-3 text-sm text-zinc-300">
            {now.map((item) => (
              <li class="flex gap-3">
                <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-violet-400"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </section>

      <!-- TOOLBOX -->
      <section id="toolbox" class="py-12">
        <h2 class="text-2xl font-semibold tracking-tight text-zinc-50">Toolbox</h2>
        <p class="mt-2 text-sm text-zinc-400">Strumenti e stack che uso spesso (in evoluzione).</p>

        <div class="mt-6 flex flex-wrap gap-2">
          {toolbox.map((t) => (
            <span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-zinc-200">
              {t}
            </span>
          ))}
        </div>
      </section>

      <!-- CONTACT -->
      <section id="contact" class="py-14">
        <div class="rounded-3xl border border-white/10 bg-white/5 p-6">
          <h2 class="text-2xl font-semibold tracking-tight text-zinc-50">Contatti</h2>
          <p class="mt-2 text-sm text-zinc-300">
            Vuoi parlare di un progetto o collaborazione? Scrivimi.
          </p>

          <div class="mt-5 flex flex-wrap gap-3 text-sm">
            <a
              href="mailto:TUAEMAIL@example.com"
              class="rounded-xl bg-zinc-50 px-4 py-2 font-semibold text-zinc-950 hover:bg-white"
            >
              Email
            </a>
            <a
              href="#"
              class="rounded-xl border border-white/15 bg-white/5 px-4 py-2 font-semibold text-white hover:bg-white/10"
            >
              LinkedIn
            </a>
            <a
              href="https://github.com/xDubby"
              target="_blank"
              class="rounded-xl border border-white/15 bg-white/5 px-4 py-2 font-semibold text-white hover:bg-white/10"
            >
              GitHub
            </a>
          </div>

          <p class="mt-4 text-xs text-zinc-400">
            Nota: aggiorneremo link e case study nello Step 4.
          </p>
        </div>
      </section>

      <footer class="py-10 text-xs text-zinc-500">
        © {new Date().getFullYear()} {name} — Portfolio
      </footer>
    </main>
  </body>
</html>
